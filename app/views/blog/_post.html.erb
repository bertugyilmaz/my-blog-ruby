<%= content_tag :div, class: "ww" do %>
  <%= content_tag :div, class: "container" do%>
    <%= content_tag :div, class: "row" do %>
      <%= content_tag :div, class: "col-lg-8 col-lg-offset-2" do %>
        <p><%= image_tag "pp.png", class: "avatar-min" %></p>
        <p><%= @article.created_at %></p>
        <h4><%= @article.title %></h4>
        <p><%= @article.content.truncate(100)%></p>
        <p><%= link_to blog_path(@article), text: "Continue Reading..." %></p>
      <%end%>
    <%end%>
  <%end%>
<%end%>