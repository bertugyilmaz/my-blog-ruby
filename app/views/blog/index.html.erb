<!-- +++++ Posts Lists +++++ -->
<% @articles.each do |article| %>
 <div id= <%= article.id % 2  == 1 ? "grey" : "white" %>>
    <%= content_tag :div, class: "container" do%>
      <%= content_tag :div, class: "row" do %>
        <%= content_tag :div, class: "col-lg-8 col-lg-offset-2" do %>
          <p><%= image_tag "pp.png", class: "avatar-min" %></p>
          <p><%= article.created_at.strftime("%B %d %Y")%></p>
          <h4><%= article.title %></h4>
          <p><%= article.content.truncate(600)%></p>
          <p><%= link_to "Okumaya devam et...", blog_path(article) %></p>
        <%end%>
      <%end%>
    <%end%>
  </div>
<%end%>
